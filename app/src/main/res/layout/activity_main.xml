<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/list_1"
            android:text="Text"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/list_2"
            android:text="Text"
            app:btnBadgeText="2"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:text="Text"
            app:btnBadgeText="333"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/list_4"
            android:text="Text"
            app:btnBadgeText="1234"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/list_5"
            android:textSize="0dp"
            app:btnBadgeText="12345"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.Normal"
            android:drawableTop="@mipmap/list_6"
            android:text="Text"
            app:btnBadgeText="12345+"/>
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:paddingLeft="1px"
        android:paddingTop="1px"
        app:columnCount="4"
        app:orientation="horizontal">

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_1"
            app:btnBadgeText="å“ˆ"
            android:text="Text"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_2"
            android:text="Text"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_3"
            android:text="Text"
            app:btnBadgeText="8"
            app:btnBadgeVisible="true"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_4"
            android:text="Text"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_5"
            android:text="Text"
            app:btnBadgeText="88"
            app:btnBadgeVisible="true"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_6"
            android:text="Text"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_5"
            android:text="Text"
            app:btnBadgeVisible="true"/>

        <ezy.ui.view.BadgeButton
            style="@style/BadgeButton.GridItem"
            android:drawableTop="@mipmap/list_6"
            android:text="Text"/>
    </android.support.v7.widget.GridLayout>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@android:color/white"
        android:paddingTop="1px"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabContentStart="0dp"
        app:tabIndicatorHeight="0dp"
        app:tabPadding="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingTop="0dp"
        app:tabPaddingBottom="0dp"
        android:orientation="horizontal"/>
</LinearLayout>